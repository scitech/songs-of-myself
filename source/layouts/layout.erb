<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <% if current_page.data.try(:[], 'description') %>
      <meta name="description" content="<%= current_page.metadata[:page]['description'] %>">
    <% end %>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Song of Myself." %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Libre+Baskerville:300italic,400italic,700italic,400,300,700|Open+Sans:300italic,400italic,700italic,400,300,700' %>
  </head>
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
